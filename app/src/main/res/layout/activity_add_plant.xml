<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@color/off_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@drawable/accent_leaf" />

        <TextView
            android:id="@+id/addNewPlant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:text="Add New Plant"
            android:textSize="40sp"
            android:fontFamily="@font/daniels_handwriting_bold"
            android:textColor="@color/black2"/>

        <EditText
            android:id="@+id/ui_plant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Plant Name"
            android:inputType="text"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="@font/raleway_medium"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plant Type"
            android:textSize="20sp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/black2"/>

        <Spinner
            android:id="@+id/type_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target Moisture Level"
            android:textSize="20sp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/black2"/>

        <EditText
            android:id="@+id/ui_target_moist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="x%"
            android:inputType="text"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum Moisture Level"
            android:textSize="20sp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/black2"/>

        <EditText
            android:id="@+id/ui_min_moist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="x%"
            android:inputType="text"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water Frequency"
            android:textSize="20sp"
            android:fontFamily="@font/raleway_medium"
            android:textColor="@color/black2"/>

        <EditText
            android:id="@+id/ui_water_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/max_days_between_waters"
            android:inputType="text"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount_of_light"
            android:textSize="20sp"
            android:textColor="@color/black2"/>

        <EditText
            android:id="@+id/ui_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hours_per_day"
            android:inputType="text"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_medium"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_button_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/add_plant"
                android:textColor="@color/black2"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>